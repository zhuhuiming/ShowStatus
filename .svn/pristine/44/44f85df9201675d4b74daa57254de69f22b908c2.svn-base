<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fbbc41"
            android:padding="8dp" >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/main_shareimageview"
                    android:layout_width="40dp"
                    android:layout_height="27dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share1" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_curtimetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2014-6-25 17:25"
                android:textColor="@color/blue"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/main_moreoperaimageview"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/more" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:padding="6dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="1.8"
                                android:gravity="center"
                
                android:background="#0d81f0"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/main_currentpersonname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                                    android:gravity="center"
                    
                    android:text="sosence"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1.8"
                android:background="#71cb39"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/main_mystatustextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="我现在正“玩三点”"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_statelinearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1.2"
                android:background="@color/red"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/main_prompttextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="现在正“玩三点”的人数为"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp" >

                    <TextView
                        android:id="@+id/main_samestatuspersonnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numeric="integer"
                        android:padding="5dp"
                        android:textColor="#ffffff"
                        android:textSize="60dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="人"
                        android:textColor="#ffffff"
                        android:textSize="30dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="#ff9200"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查找"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="1.8"
                android:padding="8dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share" />
            </RelativeLayout>

            <LinearLayout
               android:id="@+id/main_searchlinearlayout"
                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_weight="1.5"
                android:background="#cd544e"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/main_researchprompttextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="现在正查找“玩三点”的人数为"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingLeft="3dp" >

                    <TextView
                        android:id="@+id/main_researchpersonnumtextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numeric="integer"
                        android:textColor="#ffffff"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="人"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_moreoperalinearlayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#f0333333"
            android:orientation="vertical"
            android:padding="6dp" 
            android:visibility="gone">

            <TextView
                android:id="@+id/main_edittextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/makepublic_w"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp"
                android:text="@string/send_state"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/main_searchtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/search1_s"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="13dp"
                android:text="@string/search_state"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>